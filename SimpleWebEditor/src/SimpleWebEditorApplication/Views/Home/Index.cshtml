@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" style="width: 85%; margin: auto" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/tesla_web.png" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Create your own webpage in easy way.
                    <a class="btn btn-default" asp-area="" asp-controller="PageEditor" asp-action="Index">
                        Start
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/choose_template.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Choose template for your webpage.
                    <a class="btn btn-default" asp-area="" asp-controller="PageEditor" asp-action="Index">
                        Start
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/tesla_edit.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Edit your webpage using given tools.
                    <a class="btn btn-default" asp-area="" asp-controller="PageEditor" asp-action="Index">
                        Start
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
