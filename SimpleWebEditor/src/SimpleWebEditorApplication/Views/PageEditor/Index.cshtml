@model SimpleWebEditorApplication.Models.PageEditorViewModels.IndexViewModel

@{
    ViewBag.Title = "Page editor";
    Layout = "_Layout";
}

<link rel="stylesheet" type="text/css" href="~/css/pageEditor.css" />

<!-- Override bootstrap:-->
<style>
    body {
        background: #474949;
    }

    h1, h3 {
        font-weight: bold;
    }

    img {
        -webkit-box-sizing: content-box;
        -moz-box-sizing: content-box;
        box-sizing: content-box;
    }

    .row {
        background-color: white;
        margin: 2vh 0;
    }

    .col {
        margin: 3vh 0;
        overflow: auto;
    }
</style>


<!-- Include color picker (link: http://www.eyecon.ro/colorpicker/) -->
<link rel="stylesheet" href="~/lib/colorpicker/css/colorpicker.css" />
<script src="~/lib/colorpicker/js/colorpicker.js" asp-append-version="true"></script>


<div id="headerMenu" class="btn-group btn-group-justified">
    <a id="loadWorkPageButton" class="btn btn-primary btn-sm" onclick="loadPage(@Model.WorkPagePath, 'WORK_PAGE')">Load work page</a>
    <a id="loadPublishedPageButton" class="btn btn-primary btn-sm" onclick="loadPage(@Model.PublishedPagePath, 'PUBLISHED_PAGE')">Load published page</a>
    <a id="removeInsidePageButton" class="btn btn-primary btn-sm" onclick="emptyPageEditor()">Remove page</a>
    <a id="openInNewWindowButton" class="btn btn-primary btn-sm">Open in new window</a>
    <a id="savePageButton" class="btn btn-primary btn-sm" onclick="saveToWorkPage()">Save changes</a>
    <a id="publishPageButton" class="btn btn-info btn-sm" onclick="publishPage()">Publish page</a>
</div>

<div id="editor" class="row">
    <div id="loadedPageFrame" class="col col-md-9"></div>
    <div id="editPanel" class="col col-md-3"></div>
</div>

<div id="templatesPanel" class="row">
    <p class="chooseTemplateLabel">Choose page template:</p>
</div>

<div></div>

<script>
    var myApp = myApp || {};
    myApp.Urls = myApp.Urls || {};
    myApp.Urls.baseUrl = '@Url.Content("~")';
    myApp.Urls.savePageAction = '@Url.Action("SavePage","PageEditor")';
    myApp.Urls.publishPageAction = '@Url.Action("PublishPage","PageEditor")';
</script>
<script src="~/js/shared.js" asp-append-version="true"></script>
<script src="~/js/editPanel.js" asp-append-version="true"></script>
<script src="~/js/pageEditor.js" asp-append-version="true"></script>
  


